<% if @fun.content_type == "Video" %>
    $("#preview_<%= @fun.id %>").html("<%= j show_video @fun.content %>");
<% end %>

<% if @fun.content.file.gif.file.exists?%>
$("#preview_<%= @fun.id %>").html("<%= j link_to image_tag(@fun.content.file_url(:gif), class: "img-polaroid"), @fun %>");
<% end %>

