<h4><%= link_to fun.title, fun %></h4>

<dl>
    <% if fun.content.file? %>
      <dt>Image</dt>
      <dd><%= image_tag fun.content.file_url, class: "img-polaroid" %></dd>
    <% end %>
    <dt>Posted</dt>
    <dd><%= time_ago_in_words fun.created_at %> ago</dd>
    <dt>Posted by</dt>
    <% if fun.user.avatar? %>
        <dd><%= link_to image_tag(fun.user.avatar_url(:thumb), class: "img-circle", width: "50px") + ' ' + fun.user.login, fun.user %></dd>
    <% else %>
      <dd><%= link_to fun.user.login, fun.user %></dd>
    <% end %>
</dl>

<%= link_to 'Repost fun', repost_fun_path(fun), class: 'btn btn-primary' %>
<%= link_to 'Like fun', like_fun_path(fun), class: 'btn btn-success' %>