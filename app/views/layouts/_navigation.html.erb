<%= link_to "Bitfun.ru", root_path, :class => 'brand' %>
<ul class="nav">
  <li><%= link_to 'Funs', root_path %></li>
  <li><%= link_to 'Users', users_path %></li>
  <li><%= link_to 'New fun', new_fun_path %></li>
</ul>


<div class="search_tag">
    <ul id="tags" name="tags"></ul>
    <button type="submit" class="btn">Search</button>
</div>

<ul class="nav pull-right">
  <% if user_signed_in? %>
    <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <% if current_user.avatar? %>
          <%= image_tag(current_user.avatar_url(:thumb), class: "img-circle", width: "25px") + ' ' + current_user.login %>
      <% else %>
          <%= current_user.login %>
      <% end %>
      <b class="caret"></b>
    </a>
        <ul class="dropdown-menu">
          <li><%= link_to 'My page', user_path(current_user) %></li>
          <li><%= link_to 'My Feeds', feed_path %></li>
          <% if current_user.role? :admin %>
              <li><%= link_to 'Admin', users_path %></li>
          <% end %>
          <li><%= link_to 'Edit account', edit_user_registration_path %></li>
          <li><%= link_to 'Logout', destroy_user_session_path, :method=> :delete  %></li>
        </ul>
    </li>
  <% else %>
    <li><%= link_to 'Login', new_user_session_path %></li>
    <li><%= link_to 'Sign up', new_user_registration_path %></li>
  <% end %>
</ul>