<h2>Sign up</h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }, :validate => true) do |f| %>
    <%= f.error_notification %>
    <%= f.input :email, :required => true, :validate => true %>
    <%= f.input :login, :required => true %>
    <%= f.input :password, :required => true, :validate => true  %>
    <%= f.input :password_confirmation, :required => true %>
    <%= f.button :submit, 'Sign up', :class => 'btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>